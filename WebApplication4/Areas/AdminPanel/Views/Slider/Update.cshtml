@model Slider

<div class="container">




    <form method="post">
        <div class="form-group">

            <label asp-for="Title">Title</label>
            <input class="form-control" asp-for="Title" placeholder="Enter Title">
            <span asp-validation-for="Title" style="color:red"></span>
        </div>
        <div class="form-group">

            <label asp-for="SubTitle">SubTitle</label>
            <input class="form-control" asp-for="SubTitle" placeholder="Enter SubTitle">
            <span asp-validation-for="SubTitle" style="color:red"></span>
        </div>

        <div class="form-group">
            <label asp-for="Offer">Offer</label>
            <textarea class="form-control" asp-for="Offer" rows="3"></textarea>
            <span asp-validation-for="Offer" style="color:red"></span>
        </div>

        <div class="form-group">
            <label asp-for="File">Image File</label>
            <input class="form-control" asp-for="File">
            <span asp-validation-for="File" style="color:red"></span>
        </div>



        <button type="submit" class="btn btn-primary">Submit</button>
    </form>






</div>
